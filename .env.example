# Gemini CLI Configuration
# Copy this file to .env and fill in your actual values

# Required: Your Gemini API key from Google AI Studio
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Override default Gemini model
GEMINI_MODEL=gemini-2.0-flash-exp

# Optional: Google Cloud API key (for Vertex AI express mode)
GOOGLE_API_KEY=your_google_api_key_here

# Optional: Google Cloud Project ID (for Code Assist or Vertex AI)
GOOGLE_CLOUD_PROJECT=your_project_id

# Optional: Path to Google Application Credentials JSON file
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/credentials.json

# Optional: Google Cloud Project Location (e.g., us-central1)
GOOGLE_CLOUD_LOCATION=us-central1

# Optional: Google Cloud Project ID for Telemetry
OTLP_GOOGLE_CLOUD_PROJECT=your_telemetry_project_id

# Optional: Enable sandboxing (true, false, docker, podman, or custom command)
GEMINI_SANDBOX=false

# Optional: Enable debug logging (set to true or 1)
DEBUG=false

# Optional: Disable color output (set to any value)
# NO_COLOR=1

# Optional: Custom CLI title
# CLI_TITLE=My Custom Gemini CLI

# Optional: Code assist endpoint (for development/testing)
# CODE_ASSIST_ENDPOINT=https://your-endpoint.com